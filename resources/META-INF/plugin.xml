<idea-plugin>
    <id>com.shanbay.plugins.dsl.listener.builder</id>
    <name>DslListenerBuilder</name>
    <version>1.0.0</version>
    <vendor email="android@shanbay.com" url="http://www.shanbay.com">扇贝网</vendor>

    <description><![CDATA[
         <html>
        <p>Plugin for Generate Kotlin DSL ListenerBuilder Code </p>
        <p>The Open Source Code Repository Url: <a href="https://github.com/BayMikyou/DslListenerBuilder">https://github.com/BayMikyou/DslListenerBuilder</a></p>
        <p>The Plugin develop blog Url: <a href="https://juejin.im/post/5c4f106a6fb9a049de6dc410">https://juejin.im/post/5c4f106a6fb9a049de6dc410</a></p>
        <p>The more detail you can watch the below gif</p>
        <img src="https://github.com/BayMikyou/DslListenerBuilder/raw/master/art.gif"/>
      </html>
    ]]></description>

    <change-notes><![CDATA[
      <html>
  <b>1.0</b> (1/29/2019)
  <ul>
    <li>Initial release</li>
  </ul>
  </html>
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>
    <depends>com.intellij.modules.lang</depends>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action class="com.mikyou.plugins.dsl.listener.builder.action.DslListenerBuilderAction" id="DslListenerBuilder"
                text="Listener Builder" description="Event Listener Builder" popup="true">
            <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="JavaGenerateGroup2"/>
        </action>
    </actions>
</idea-plugin>